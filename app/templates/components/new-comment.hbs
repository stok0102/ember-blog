<h3>New Comment</h3>
   <div>
     <form>
       <div class="form-group">
         <label class="sr-only" for="username">Username:</label>
         {{input value=username id="username" placeholder="Username"}}
       </div>

       <div class="form-group">
         <label class="sr-only" for="mood">Mood:</label>
         {{input value=mood id="mood" placeholder="Mood"}}
       </div>

       <div class="form-group">
         <label class="sr-only" for="commentContent">Comment:</label>
         {{textarea cols="70" rows="5" value=commentContent id="commentContent" placeholder="Comment"}}
       </div>

       <button {{action 'save'}}>Save</button>
     </form>
   </div>
